<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#E3F2FD">


        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/btn_back_des"
            android:layout_marginBottom="30dp"/>


        <ImageView
            android:id="@+id/icon_pet"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/image_pet"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/icon_pet_desc"/>


        <TextView
            android:id="@+id/register_pet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/register_pet_title"
            android:textSize="24sp"
            android:textColor="#5A9BD5"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pet_name"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:inputType="textPersonName"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/pet_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pet_birthday"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:inputType="date"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/pet_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pet_age"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:inputType="number"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/pet_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pet_weight"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/pet_allergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pet_allergies"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:importantForAutofill="no"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/pet_breed_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pet_breed"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/dropdown_icon_breed"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dropdown_arrow"
                android:contentDescription="@string/ic_image"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/pet_species_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pet_species"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/dropdown_icon_species"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dropdown_arrow"
                android:contentDescription="@string/ic_image"/>

        </LinearLayout>


        <Button
            android:id="@+id/register_pet_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#5A9BD5"
            android:text="@string/register_pet_button"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>
</ScrollView>
