<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F1F8FE">


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_arrow"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/back_button_desc" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_title"
        android:textSize="22sp"
        android:textColor="#00796B"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/img_profile"
        android:background="@drawable/bg_circle_light"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/profile_icon_desc" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_border_box">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_name"
            android:textColor="#5A9BD5"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_name"
            android:background="@null"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:importantForAutofill="no"
            android:focusable="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5A9BD5"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_email"
            android:textColor="#5A9BD5"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_email"
            android:background="@null"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
            android:focusable="false"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5A9BD5"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_phone"
            android:textColor="#5A9BD5"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_phone"
            android:background="@null"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="phone"
            android:importantForAutofill="no"
            android:focusable="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5A9BD5"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_address"
            android:textColor="#5A9BD5"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_address"
            android:background="@null"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPostalAddress"
            android:importantForAutofill="no"
            android:focusable="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5A9BD5"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />


        <TextView
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_button_text"
            android:textColor="#5A9BD5"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:paddingTop="8dp" />
    </LinearLayout>
</LinearLayout>
