<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#E3F2FD">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/btn_back_des"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/image5"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/ic_image"/>

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/welcome_text"
            android:textSize="26sp"
            android:textColor="#5A9BD5"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/instruction_text"
            android:textSize="18sp"
            android:textColor="#616161"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:importantForAutofill="no"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:importantForAutofill="no"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/mother_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mother_last_name"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:importantForAutofill="no"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:importantForAutofill="no"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:importantForAutofill="no"
            android:inputType="textPostalAddress"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#5A9BD5"
            android:text="@string/register_button"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>
</ScrollView>
